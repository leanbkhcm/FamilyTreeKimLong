datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}



model Person {
  personId      Int      @id @default(autoincrement())
  fatherId      Int
  motherId      Int
  name          String
  hintName      String
  seqInFamilyId	Int
  sex			String
  birthDay      DateTime 
  email         String  @unique
  phoneNo       String
  remark  		String
  //LinkPersonSource  LinkPersonSource[]
}



model Marriage {
  marriageId    Int      @id @default(autoincrement())
  maleId        Int
  femaleId      Int
  marriageDate  DateTime 
  remark  		String
}



